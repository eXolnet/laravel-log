{
    "name": "exolnet/laravel-log",
    "description": "This package extends Laravelâ€™s log package to configure a Monolog driver",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-log"
    ],
    "homepage": "https://github.com/eXolnet/laravel-log",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Rochette",
            "email": "trochette@exolnet.com"
        },
        {
            "name": "Alexandre D'Eschabeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "graylog2/gelf-php": "^1.5",
        "illuminate/contracts": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0",
        "illuminate/log": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0",
        "illuminate/support": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^6.5",
        "orchestra/testbench" : "^3.5|^4.0|^5.0",
        "squizlabs/php_codesniffer": "^3.3.2"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Log\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Log\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 config src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 config src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Log\\LogServiceProvider"
            ]
        }
    }
}
